# UpgradeSchema Control File (Default) for Step Two
# Converts CONTENT_COLLECTION table
dbDriver=oracle.jdbc.driver.OracleDriver

# Conversion needs the database connection details
dbURL=PUT_YOUR_URL_HERE
dbUser=PUT_YOUR_USERNAME_HERE
dbPass=PUT_YOUR_PASSWORD_HERE

## convert to binary-entity serialization for content_collection table
## comment out this step unless you are switching from XML to binary-entity serialization
convert.0=Type1BlobCollectionConversion
convert.0.handler.class=org.sakaiproject.content.impl.serialize.impl.conversion.Type1BlobCollectionConversionHandler
convert.0.create.migrate.table.count=0
convert.0.create.migrate.table.0=create table CONTENT_COL_T1REGISTER ( id VARCHAR2(1024), status VARCHAR2(99) )
convert.0.create.migrate.table.1=create index CONTENT_COL_T1REGISTER_id_idx on CONTENT_COL_T1REGISTER(id)
convert.0.create.migrate.table.2=create index CONTENT_COL_T1REGISTER_st_idx on CONTENT_COL_T1REGISTER(status)
convert.0.drop.migrate.table.count=2
convert.0.drop.migrate.table.0=drop table CONTENT_COL_T1REGISTER
convert.0.drop.migrate.table.1=update CONTENT_COLLECTION set XML = NULL where BINARY_ENTITY is not NULL
convert.0.check.migrate.table=select count(*) from CONTENT_COL_T1REGISTER  where status <> 'done'
convert.0.select.next.batch=select id from CONTENT_COL_T1REGISTER where status = 'pending' and rownum <= 100
convert.0.complete.next.batch=update CONTENT_COL_T1REGISTER set status = 'done' where id = ?
convert.0.mark.next.batch=update CONTENT_COL_T1REGISTER set status = 'locked' where id = ?
convert.0.populate.migrate.table=INSERT INTO CONTENT_COL_T1REGISTER (id, status) SELECT collection_id, 'pending' FROM CONTENT_COLLECTION source_table WHERE NOT exists (select id FROM CONTENT_COL_T1REGISTER register_table where source_table.collection_id=register_table.id)
convert.0.select.record=select XML from CONTENT_COLLECTION where COLLECTION_ID = ?
convert.0.select.validate.record=select BINARY_ENTITY from CONTENT_COLLECTION where COLLECTION_ID = ?
convert.0.update.record=update CONTENT_COLLECTION set BINARY_ENTITY = ?  where COLLECTION_ID = ?
convert.0.new.columns.names=BINARY_ENTITY
convert.0.new.columns.types=BLOB
convert.0.new.columns.qualifiers=default null
convert.0.new.columns.add=alter table CONTENT_COLLECTION add <name> <type> <qualifier>
convert.0.new.columns.test=select column_name from user_tab_columns where table_name = 'CONTENT_COLLECTION' and column_name = '<name>'
convert.0.verify.error.table=select column_name from user_tab_columns where table_name = 'CONTENT_CONVERSION_ERRORS'
convert.0.create.error.table=create table CONTENT_CONVERSION_ERRORS ( entity_id VARCHAR2(255), conversion VARCHAR2(255), error_description VARCHAR2(1024), report_time TIMESTAMP default LOCALTIMESTAMP )
convert.0.report.error=insert into CONTENT_CONVERSION_ERRORS (entity_id,conversion,error_description) values (?,?,?)
convert.0.early.termination.signal=quit.txt

